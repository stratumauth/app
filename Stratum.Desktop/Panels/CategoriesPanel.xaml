<UserControl x:Class="Stratum.Desktop.Panels.CategoriesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{StaticResource BackgroundBrush}">

    <Grid Margin="24" MaxWidth="600">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{DynamicResource Categories}" Style="{StaticResource HeadlineStyle}" Margin="0,0,0,24"/>

        <!-- Category List -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="0">
            <ListBox x:Name="CategoriesListBox"
                     SelectionMode="Single"
                     BorderThickness="0"
                     Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="16,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Name}" VerticalAlignment="Center" Style="{StaticResource TitleStyle}"/>
                            <Button Grid.Column="1" Content="{DynamicResource Edit}" Margin="8,0"
                                    Style="{StaticResource IconButtonStyle}"
                                    Width="Auto" Height="Auto" Padding="8,4"
                                    Click="EditCategoryButton_Click"/>
                            <Button Grid.Column="2" Content="{DynamicResource Delete}"
                                    Style="{StaticResource IconButtonStyle}"
                                    Width="Auto" Height="Auto" Padding="8,4"
                                    Foreground="Red"
                                    Click="DeleteCategoryButton_Click"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Add Category -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="NewCategoryTextBox" Grid.Column="0"
                         Style="{StaticResource SearchTextBoxStyle}"
                         MaxLength="32"
                         Margin="0,0,8,0"/>
                <Button Grid.Column="1" Content="{DynamicResource Add}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="AddCategoryButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
