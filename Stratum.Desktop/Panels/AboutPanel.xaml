<UserControl x:Class="Stratum.Desktop.Panels.AboutPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="{StaticResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24" MaxWidth="600">
            <TextBlock Text="{DynamicResource About}" Style="{StaticResource HeadlineStyle}" Margin="0,0,0,24"/>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="{DynamicResource AppName}" FontSize="20" FontWeight="Medium"/>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock x:Name="VersionLabel" Text="Version" Style="{StaticResource SubtitleStyle}"/>
                        <TextBlock x:Name="VersionNumber" Text=" 1.0.0" Style="{StaticResource SubtitleStyle}"/>
                    </StackPanel>
                    <TextBlock Text="{DynamicResource AboutDescription}"
                               Style="{StaticResource SubtitleStyle}"
                               Margin="0,8,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <TextBlock Text="{DynamicResource License}" Style="{StaticResource TitleStyle}" Margin="0,24,0,12"/>
            <Border Style="{StaticResource CardStyle}">
                <TextBlock Text="GPL-3.0-only" Style="{StaticResource SubtitleStyle}"/>
            </Border>

            <TextBlock Text="{DynamicResource Links}" Style="{StaticResource TitleStyle}" Margin="0,24,0,12"/>
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock>
                        <Hyperlink NavigateUri="https://github.com/banlanzs/app" RequestNavigate="Hyperlink_RequestNavigate">
                            <Run x:Name="GitHubRepositoryRun" Text="GitHub Repository"/>
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Margin="0,8,0,0">
                        <Hyperlink NavigateUri="https://github.com/banlanzs/app/issues" RequestNavigate="Hyperlink_RequestNavigate">
                            <Run x:Name="ReportIssueRun" Text="Report an Issue"/>
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
