<Window x:Class="Stratum.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Stratum.Desktop.ViewModels"
        xmlns:controls="clr-namespace:Stratum.Desktop.Controls"
        mc:Ignorable="d"
        Title="{DynamicResource AppName}"
        Height="600" Width="850"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Window.InputBindings>
        <KeyBinding Key="F" Modifiers="Ctrl" Command="{Binding FocusSearchCommand}"/>
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding AddAuthenticatorCommand}"/>
        <KeyBinding Key="Escape" Command="{Binding ClearSearchCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Rail -->
        <controls:NavigationRail x:Name="NavigationRail"
                                  Grid.Column="0"
                                  NavigationChanged="NavigationRail_NavigationChanged"/>

        <!-- Content Frame -->
        <Frame x:Name="ContentFrame"
               Grid.Column="1"
               NavigationUIVisibility="Hidden"
               Background="{StaticResource BackgroundBrush}"/>
    </Grid>
</Window>
