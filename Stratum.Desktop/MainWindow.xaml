<Window x:Class="Stratum.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Stratum.Desktop.ViewModels"
        mc:Ignorable="d"
        Title="Stratum Authenticator"
        Height="600" Width="450"
        MinHeight="400" MinWidth="350"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Window.InputBindings>
        <KeyBinding Key="F" Modifiers="Ctrl" Command="{Binding FocusSearchCommand}"/>
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding AddAuthenticatorCommand}"/>
        <KeyBinding Key="Escape" Command="{Binding ClearSearchCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource DividerBrush}" BorderThickness="0,0,0,1"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <TextBox x:Name="SearchBox" Grid.Column="0"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource SearchTextBoxStyle}"
                         Margin="0,0,12,0">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Escape" Command="{Binding ClearSearchCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <!-- Category Filter -->
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding SelectedCategory}"
                          DisplayMemberPath="Name"
                          Style="{StaticResource CategoryComboBoxStyle}"
                          Margin="0,0,8,0"/>

                <!-- Settings Button -->
                <Button Grid.Column="2"
                        Style="{StaticResource IconButtonStyle}"
                        Command="{Binding OpenSettingsCommand}"
                        ToolTip="Settings">
                    <TextBlock Text="&#x2699;" FontSize="20" FontFamily="Segoe UI Symbol"/>
                </Button>
            </Grid>
        </Border>

        <!-- Authenticator List -->
        <ListBox Grid.Row="1"
                 ItemsSource="{Binding FilteredAuthenticators}"
                 SelectedItem="{Binding SelectedAuthenticator}"
                 Background="Transparent"
                 BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 VirtualizingPanel.IsVirtualizing="True"
                 VirtualizingPanel.VirtualizationMode="Recycling"
                 ItemContainerStyle="{StaticResource AuthenticatorListItemStyle}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource CardStyle}"
                            Margin="16,8,16,0"
                            Cursor="Hand"
                            MouseLeftButtonUp="AuthenticatorCard_Click">
                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Copy Code" Command="{Binding DataContext.CopyCodeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                          CommandParameter="{Binding}"/>
                                <MenuItem Header="Edit" Command="{Binding DataContext.EditAuthenticatorCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                          CommandParameter="{Binding}"/>
                                <Separator/>
                                <MenuItem Header="Show QR Code" Command="{Binding DataContext.ShowQrCodeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                          CommandParameter="{Binding}"/>
                                <Separator/>
                                <MenuItem Header="Delete" Command="{Binding DataContext.DeleteAuthenticatorCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                          CommandParameter="{Binding}" Foreground="Red"/>
                            </ContextMenu>
                        </Border.ContextMenu>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="48"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Icon -->
                            <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"
                                    Width="40" Height="40" CornerRadius="20"
                                    Background="{StaticResource PrimaryBrush}"
                                    VerticalAlignment="Center" Margin="0,0,12,0">
                                <TextBlock Text="{Binding IssuerInitial}"
                                           FontSize="18" FontWeight="Medium"
                                           Foreground="White"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <!-- Issuer -->
                            <TextBlock Grid.Column="1" Grid.Row="0"
                                       Text="{Binding Issuer}"
                                       Style="{StaticResource TitleStyle}"/>

                            <!-- Username -->
                            <TextBlock Grid.Column="1" Grid.Row="1"
                                       Text="{Binding Username}"
                                       Style="{StaticResource SubtitleStyle}"
                                       Visibility="{Binding HasUsername, Converter={StaticResource BoolToVisibilityConverter}}"/>

                            <!-- OTP Code -->
                            <TextBlock Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2"
                                       Text="{Binding FormattedCode}"
                                       Style="{StaticResource CodeStyle}"
                                       Margin="0,8,0,0"/>

                            <!-- Timer Progress -->
                            <Grid Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ProgressBar Grid.Column="0"
                                             Value="{Binding TimeRemaining}"
                                             Maximum="{Binding Period}"
                                             Style="{StaticResource TimerProgressStyle}"
                                             Visibility="{Binding IsTimeBased, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                <TextBlock Grid.Column="1"
                                           Text="{Binding TimeRemaining, StringFormat={}{0}s}"
                                           Style="{StaticResource SubtitleStyle}"
                                           Margin="8,0,0,0"
                                           Visibility="{Binding IsTimeBased, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                <!-- HOTP Refresh Button -->
                                <Button Grid.Column="1"
                                        Content="Refresh"
                                        Command="{Binding DataContext.IncrementCounterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Visibility="{Binding IsCounterBased, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Padding="8,4"/>
                            </Grid>

                            <!-- Copy Indicator -->
                            <Border Grid.Column="2" Grid.Row="0"
                                    Visibility="{Binding JustCopied, Converter={StaticResource BoolToVisibilityConverter}}"
                                    Background="{StaticResource SuccessBrush}"
                                    CornerRadius="4" Padding="8,4">
                                <TextBlock Text="Copied!" Foreground="White" FontSize="11"/>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Empty State -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="{Binding IsEmpty, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="No authenticators yet"
                       Style="{StaticResource HeadlineStyle}"
                       HorizontalAlignment="Center" Opacity="0.5"/>
            <TextBlock Text="Click the + button to add one"
                       Style="{StaticResource SubtitleStyle}"
                       HorizontalAlignment="Center" Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Footer / Add Button -->
        <Border Grid.Row="2"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource DividerBrush}" BorderThickness="0,1,0,0"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding AuthenticatorCount, StringFormat={}{0} authenticators}"
                           Style="{StaticResource SubtitleStyle}"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Content="+ Add"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding AddAuthenticatorCommand}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
