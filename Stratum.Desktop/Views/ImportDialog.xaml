<Window x:Class="Stratum.Desktop.Views.ImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource ImportFromOtherApp}"
        Height="450" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="{DynamicResource ImportFrom}" Style="{StaticResource HeadlineStyle}" Margin="0,0,0,8"/>
            <TextBlock Text="{DynamicResource SelectSource}"
                       Style="{StaticResource SubtitleStyle}"/>
        </StackPanel>

        <ListBox x:Name="SourceListBox" Grid.Row="1"
                 SelectionMode="Single"
                 BorderThickness="1"
                 BorderBrush="{StaticResource DividerBrush}">
            <ListBoxItem Content="{DynamicResource ImportSource_GoogleAuth}"/>
            <ListBoxItem Content="{DynamicResource ImportSource_Aegis}"/>
            <ListBoxItem Content="{DynamicResource ImportSource_2FAS}"/>
            <ListBoxItem Content="{DynamicResource ImportSource_Bitwarden}"/>
            <ListBoxItem Content="{DynamicResource ImportSource_andOTP}"/>
            <ListBoxItem Content="{DynamicResource ImportSource_FreeOTP}"/>
            <ListBoxItem Content="{DynamicResource ImportSource_FreeOTPPlus}"/>
            <ListBoxItem Content="{DynamicResource ImportSource_AuthenticatorPlus}"/>
            <ListBoxItem Content="{DynamicResource ImportSource_WinAuth}"/>
            <ListBoxItem Content="{DynamicResource ImportSource_TOTPAuth}"/>
            <ListBoxItem Content="{DynamicResource ImportSource_Ente}"/>
            <ListBoxItem Content="{DynamicResource ImportSource_LastPass}"/>
            <ListBoxItem Content="{DynamicResource ImportSource_ProtonPass}"/>
            <ListBoxItem Content="{DynamicResource ImportSource_KeePass}"/>
            <ListBoxItem Content="{DynamicResource ImportSource_URIList}"/>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="{DynamicResource Cancel}"
                    Style="{StaticResource IconButtonStyle}"
                    Width="Auto" Height="Auto" Padding="16,8"
                    Click="CancelButton_Click" Margin="0,0,8,0"/>
            <Button Content="{DynamicResource SelectFile}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="SelectFileButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
