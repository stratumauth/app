<Window x:Class="Stratum.Desktop.Views.QrCodeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource QRCodeTitle}"
        Height="480" Width="360" MinHeight="360" MinWidth="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,16">
            <TextBlock x:Name="IssuerText" Text="Issuer"
                       Style="{StaticResource HeadlineStyle}"
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="UsernameText" Text="Username"
                       Style="{StaticResource SubtitleStyle}"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- QR Code Image -->
        <Border Grid.Row="1" Background="White" Padding="16" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="280" MaxHeight="280">
            <Image x:Name="QrCodeImage" Width="240" Height="240" Stretch="Uniform"
                   RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        </Border>

        <!-- Copy URI Button -->
        <Button Grid.Row="2" Content="{DynamicResource CopyURI}"
                Style="{StaticResource PrimaryButtonStyle}"
                HorizontalAlignment="Center"
                Margin="0,16,0,0"
                Click="CopyUriButton_Click"/>
    </Grid>
</ScrollViewer>
</Window>
